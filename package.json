{
  "name": "@wikia/post-quecast",
  "version": "3.0.0",
  "description": "Post message based queued broadcast.",
  "contributors": [
    "Damian Bielecki <dbielecki@fandom.com>",
    "Damian Sobczak <dsobczak@fandom.com>"
  ],
  "keywords": [
    "typescript",
    "broadcast",
    "history",
    "remember",
    "iframe",
    "post message",
    "rxjs",
    "queue"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Wikia/post-quecast.git"
  },
  "license": "MIT",
  "files": [
    "dist/",
    "src/"
  ],
  "main": "./dist/commonjs/index.js",
  "module": "./dist/module/index.js",
  "typings": "./dist/types/index.d.ts",
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist",
    "prepare": "husky install",
    "build": "rollup -c rollup.config.js --bundleConfigAsCjs",
    "watch": "npm run build -- -w",
    "lint": "tslint ./src/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts -t verbose",
    "prettier": "prettier --write '**/*.{ts,js,json,css,scss,html}'",
    "format": "npm run prettier && npm run lint:fix",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "e2e": "wdio test/wdio.conf.js",
    "e2e:headless": "wdio test/wdio-headless.conf.js",
    "e2e:ci": "start-server-and-test examples:prod http://localhost:8080 e2e:headless",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "examples:dev": "webpack-dev-server --config ./examples/webpack.config.js --progress",
    "examples:prod": "webpack-dev-server --config ./examples/webpack.config.js --mode=production",
    "examples:build": "webpack --config ./examples/webpack.config.js --mode=production",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@rollup/plugin-commonjs": "24.0.1",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-terser": "0.4.0",
    "@rollup/plugin-typescript": "11.0.0",
    "@types/jest": "29.4.0",
    "@types/mocha": "10.0.1",
    "@types/node": "18.14.5",
    "@wdio/cli": "8.5.1",
    "@wdio/local-runner": "8.5.4",
    "@wdio/mocha-framework": "8.4.0",
    "@wdio/spec-reporter": "8.4.0",
    "@wdio/sync": "^7.27.0",
    "chromedriver": "110.0.0",
    "commitizen": "4.3.0",
    "coveralls": "3.1.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "jest": "29.4.3",
    "jest-environment-jsdom": "29.4.3",
    "lint-staged": "13.1.2",
    "mocha": "10.2.0",
    "prettier": "2.8.4",
    "rimraf": "4.2.0",
    "rollup": "3.18.0",
    "rxjs": "7.8.0",
    "semantic-release": "20.1.1",
    "source-map-support": "0.5.21",
    "start-server-and-test": "2.0.0",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths-webpack-plugin": "4.0.0",
    "tslint": "6.1.2",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.9.5",
    "wdio-chromedriver-service": "8.1.1",
    "webdriverio": "8.5.1",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
